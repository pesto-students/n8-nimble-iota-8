{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "ignorePatterns": ["node_modules", "build"],
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": [0, "windows"],
        "quotes": ["warn", "double"],
        "semi": ["warn", "always"],
        "no-unused-vars": "warn",
        "no-undef": "warn"
    }
}
